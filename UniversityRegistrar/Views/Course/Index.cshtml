@{
    Layout = "_Layout";
}
@using UniversityRegistrar.Models;

@if(Model.Count == 0)
{
    <h1>You haven't added any courses, click the link below to add one.</h1>
}

@foreach (Course course in Model)
{
    <li>@Html.ActionLink($"{course.Name}", "Details", new { id = course.CourseId })</li>
}


<p>@Html.ActionLink("Add a new course", "Create")</p>
<p>@Html.ActionLink("Go Home", "Index", "Home")</p>