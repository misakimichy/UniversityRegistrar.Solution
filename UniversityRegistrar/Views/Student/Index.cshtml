@{
    Layout = "_Layout";
}
@using UniversityRegistrar.Models;

@if(Model.Count == 0)
{
    <h1>You haven't added any students, click the link below to add one.</h1>
}

@foreach (Student student in Model)
{
    <li>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId })</li>
}


@Html.ActionLink("Add a new student", "Create")