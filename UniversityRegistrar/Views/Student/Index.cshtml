@{
    Layout = "_Layout";
}
@using UniversityRegistrar.Models;

<h1>List of Students</h1>

<div class="info-container">
    @if(Model.Count == 0)
    {
        <h5>You haven't added any students, click the link below to add one.</h5>
    }

    <ul>
    @foreach (Student student in Model)
    {
        <li>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId })</li>
        <hr />
    }
    </ul>
</div>

<p>@Html.ActionLink("Add a new student", "Create")</p>
<p>@Html.ActionLink("Go Home", "Index", "Home")</p>
